<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:title=""
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"></ImageView>

                <TextView
                    android:id="@+id/stock_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/logo"
                    android:layout_toEndOf="@id/logo"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/logo"
                    android:layout_toEndOf="@id/logo"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/logo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/logo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/trend"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@id/price_change"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toStartOf="@id/price_change"></ImageView>
            </RelativeLayout>
            <!--<androidx.fragment.app.FragmentContainerView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/banner"
                android:id="@+id/tabFragment">

            </androidx.fragment.app.FragmentContainerView>
-->            <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/banner"
            android:layout_weight="1" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewPager"
                app:tabIndicatorColor="@color/blue"
                app:tabSelectedTextColor="@color/blue"
                app:tabTextColor="@color/black" />

            <TextView
                android:id="@+id/text_portfolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tabLayout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Portfolio"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_portfolio"
                android:layout_marginLeft="15dp"
                android:id="@+id/portfolio">
                <TableRow>
                    <TextView
                        android:text="Shares Owned:"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="0"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Avg. Cost / Share:       "
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Total Cost: "
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Change: "
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Market Value: "
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/text_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/portfolio"
                android:layout_alignParentStart="true"
                android:text="Stats"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_stats"
                android:layout_marginLeft="15dp"
                android:id="@+id/stats">
                <TableRow>
                    <TextView
                        android:text="Open Price:"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="     High Price:"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Low Price:"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="     Prev. Close:"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="$0.00"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/text_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stats"
                android:layout_alignParentStart="true"
                android:text="About"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_about"
                android:layout_marginLeft="15dp"
                android:id="@+id/about">
                <TableRow>
                    <TextView
                        android:text="IPO Start Date"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="1-1-1912"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Industry"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="Make money"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Webpage"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="Rick Roll"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Company Peers"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                    <TextView
                        android:text="Rick Roll"
                        android:textColor="@color/black"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>


            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/text_insights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about"
                android:layout_alignParentStart="true"
                android:text="Insights"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <WebView
                android:visibility="gone"
                android:id="@+id/eps"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/tabLayout"></WebView>

            <TextView
                android:id="@+id/padding"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/text_insights"></TextView>
        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>